server {
  server_name lurashura.fun  www.lurashura.fun ;

  location / {
    proxy_pass http://0.0.0.0:9090;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }


location /static/ {
  autoindex on;
  alias /home/ubuntu/skincare/staticfiles/;
}

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/lurashura.fun/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/lurashura.fun/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.lurashura.fun) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = lurashura.fun) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


  listen 80;
  server_name lurashura.fun  www.lurashura.fun ;
    return 404; # managed by Certbot
    

listen [::]:443 ssl ipv6only=on;
listen 443 ssl;
ssl_certificate /etc/letsencrypt/live/your_domain.com/fullchain.pem;
ssl_certificate_key /etc/letsencrypt/live/your_domain.com/privkey.pem;
include /etc/letsencrypt/options-ssl-nginx.conf;
ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

}


